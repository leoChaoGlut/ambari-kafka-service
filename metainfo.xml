<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>KAFKA_260</name>
            <displayName>kafka</displayName>
            <comment></comment>
            <version>2.6.0</version>
            <components>
                <component>
                    <name>KAFKA_260</name>
                    <displayName>Kafka</displayName>
                    <category>MASTER</category>
                    <cardinality>1+</cardinality>
                    <versionAdvertised>true</versionAdvertised>
                    <recovery_enabled>true</recovery_enabled>
                    <commandScript>
                        <script>scripts/broker.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>60</timeout>
                    </commandScript>
                </component>

                <component>
                    <name>KAFKA_CONNECT_260</name>
                    <displayName>Kafka Connect</displayName>
                    <category>SLAVE</category>
                    <cardinality>0+</cardinality>
                    <versionAdvertised>true</versionAdvertised>
                    <recovery_enabled>true</recovery_enabled>
                    <commandScript>
                        <script>scripts/connect.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>60</timeout>
                    </commandScript>
                </component>
            </components>

            <configuration-dependencies>
                <config-type>connect-distributed.properties</config-type>
                <config-type>server.properties</config-type>
            </configuration-dependencies>

        </service>
    </services>
</metainfo>
